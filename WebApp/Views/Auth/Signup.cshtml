@model SignupRequestModel
@{
    ViewData["bodyContainer"] = "container-fluid";
}

<div class="wrapper">
    <form method="post" asp-controller="Auth" asp-action="Signup" class="form-signin">
        <h1 class="h3 mb-3 fw-normal text-center">Please signup</h1>

        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Joe Doe">
            <label asp-for="Name">Full Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Pwd" class="form-control" placeholder="Password">
            <label asp-for="Pwd" for="floatingPassword">Password</label>
            <span asp-validation-for="Pwd" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary text-center">Signup</button>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
