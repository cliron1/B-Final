@model LoginRequestModel
@{
    ViewData["bodyContainer"] = "container-fluid";
}

<div class="wrapper">
    <form method="post" asp-controller="Auth" asp-action="Login" class="form-signin">
        <h1 class="h3 mb-3 fw-normal text-center">Please sign in</h1>

        <div class="form-floating">
            <input asp-for="Email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email" class="text-danger text-ali"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Pwd" class="form-control" placeholder="Password">
            <label asp-for="Pwd" for="floatingPassword">Password</label>
            <span asp-validation-for="Pwd" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input asp-for="RemeberMe"> Remember me
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary text-center">Sign in</button>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
}